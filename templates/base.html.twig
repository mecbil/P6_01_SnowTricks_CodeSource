<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Snow Tricks!{% endblock %}</title>
        <link href="{{ asset('css/style.css') }}" rel="stylesheet">
        <link href="https://bootswatch.com/4/darkly/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" >

      
        {% block stylesheets %}

        {% endblock %}


    </head>
    <body>

      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container-fluid ">
            <a class="navbar-brand" href="/">Snow Tricks </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor02">
              <ul class="navbar-nav ml-auto">
                  <li class="nav-item">
                    <a class="nav-link {{ (activee)=='Home' ? 'active' : '' }}" href="{{ path('app_home') }}">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link {{ (activee)=='Tricks' ? 'active' : '' }}" href="{{ path('tricks') }}">Tricks</a>
                  </li>
                  {% if app.user is null %}
                  <li class="nav-item">
                    <a class="nav-link {{ (activee)=='Connexion' ? 'active' : '' }}" href="{{ path('app_login') }}">Sign in</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link {{ (activee)=='Register' ? 'active' : '' }}" href="{{ path('app_register') }}">Sign up</a>
                  </li>
                  {% else %}
                  <li class="nav-item">
                    <a class="nav-link {{ (activee)=='Admin' ? 'active' : '' }}" href="{{ path('admin') }}">Dashbord</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link {{ (activee)=='Logout' ? 'active' : '' }}" href="{{ path('app_logout') }}">Logout</a>
                  </li>
                  {% endif %}

              </ul>
            </div>
          </div>
      </nav>

      <div class="Container">
          {% block body %}{% endblock %}
      </div>
      
      <div class="container-fluid">
        <footer class="py-3 my-4 border-top text-center">
          <span class="text-muted text-center">&copy; 2021 Nabil Mecili, tous droit réservés</span>
        </footer>
      </div>
        
      {% block javascripts %}
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
        {{ encore_entry_script_tags('app') }}
      {% endblock %}
    </body>
</html>
