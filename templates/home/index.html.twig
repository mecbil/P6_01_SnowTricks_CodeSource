{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <div class="Container">

        {% for message in app.flashes('success') %}
            <div class="alert alert-danger" role="alert">{{ message }}</div>
        {% endfor %}

        <div id="carouselExampleSlidesOnly" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="{{ asset('images/frontflip-1.jpg') }}" class="carouselimg" alt="First">
                    <a href="#tricks" class='icone'><i class="fas fa-chevron-down fa-4x"></i></a>
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('images/nose-grab.jpg') }}" class="carouselimg" alt="Secound">
                    <a href="#tricks" class='icone'><i class="fas fa-chevron-down fa-4x"></i></a>
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('images/stalefish-1.jpg') }}" class="carouselimg" alt="Third">
                    <a href="#tricks" class='icone'><i class="fas fa-chevron-down fa-4x"></i></a>
                </div>
            </div>
        </div>
        
    </div>
    <section class="tricks">

        {% for Trick in Tricks %}
        <div class="card border-secondary mb-2 m-2" style="width: 16rem;">
            <div class="card-header" >
                <a href="{{ path('tricks_show',{'id': Trick.id}) }}">
                    <img src="{{ asset('/images/'~Trick.FituredImg) }}" class="img-thumbnail" alt="image Auberge la Cannebière">
                </a>
            </div>
            <div class="card-body">
                <h6 class="card-title">
                <p class="border-top"></p>
                    {{ Trick.title }}
                    {% if app.user %}
                        <div class="float-right">
                            <a href="{{ path('tricks_edit', {'id': Trick.id }) }}#tr"><i class="fas fa-pencil-alt"></i></a>
                            <a href="#" onclick="return confirm(`Êtes-vous sûr de vouloir supprimer le trick : {{ Trick.title }} ?`)"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    {% endif %}
                </h6>
            </div>
        </div>
        {% endfor %}
    </section>

    
{% endblock %}
