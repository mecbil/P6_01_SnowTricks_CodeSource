{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>
    <div class='container  col-4'>
    {{ form_start(registrationForm, {attr: {novalidate: 'novalidate'}}) }}
        {{ form_row(registrationForm.lastname, {label: 'Nom :', attr: {'placeholder': 'Nom...'} }) }}
        {{ form_row(registrationForm.nickname, {label: 'Pseudo :', attr: {'placeholder': 'Pseudo...'} }) }}
        {{ form_row(registrationForm.email, {label: 'Email :', attr: {'placeholder': 'Adresse Mail...'} }) }}
        {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe :', attr: {'placeholder': 'Mots de passe...'}}) }}
        {{ form_row(registrationForm.agreeTerms, {label:'<a href="' ~ path("mentions") ~ '">' ~ "Mentions l√©gales :" ~ '</a>', label_html: true}) }}</a>

        <button type="submit" class="btn btn-success">Register</button>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
